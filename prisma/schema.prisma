generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fill {
  id String @id @default(uuid())

  totalPrice  Float
  totalLiters Float

  filledAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mileage_id String?
  Mileage    Mileage? @relation(fields: [mileage_id], references: [id])
}

model Mileage {
  id String @id @default(uuid())

  kilometers Float

  fills Fill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
